<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.automatedtellermachine.android.atmproject.MainActivity"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bankofmatthew"
         />
    <TextView
        android:id="@+id/BankTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Bank of Matthew"
        android:textSize="25dp"
        android:padding="10dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/touchStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch here to Start"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="startButton"

        />

</RelativeLayout>
